<h1>Profile</h1>

<%= form_for @current_user, html: {multipart: true} do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>

<div>
  <%= f.label :handle %>
  <%= f.text_field :handle %>
</div>

<div>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
</div>

<div>
  <%= f.check_box :remove_avatar %>
  <%= f.label :remove_avatar %>
</div>

<%= f.submit "Save Profile" %>

<% end %>
